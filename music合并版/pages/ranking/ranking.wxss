.header {
  width: 100%;
  height: 2.08rem;
  background-color: white;
  position: relative;
  display: flex;
}

.search_logo {
  position: absolute;
  left: 4%;
  top: 27%;
  z-index: 100;
}

input {
  width: 87%;
  position: absolute;
  top: 0.3rem;
  left: 2%;
  border-radius: 5px;
  border: 1px solid #e1e1e1;
  background: white;
  padding-left: 8%;
  font-size: 70%;
  color: #9d9d9d;
}

.flex-wrp {
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  display: flex;
  background-color: #fff;
  text-align: center;
  padding: 0px 0.9%;
  box-shadow: 0px 5px 5px #9d9d9d;
}

.flex-wrp button {
  width: 24%;
  line-height: 200%;
  font-size: 70%;
  margin: 1px;
}

.flex-wrp button:hover {
  color: red;
  opacity: 1;
}

.search-li {
  display: flex;
  flex-direction: column;
  margin: 3%;
  border-bottom: 1px solid #9d9d9d;
}

.name {
  font-family: initial;
  font-size: 100%;
  margin: 2%;
}

.content {
  display: flex;
  flex-direction: row;
}

.topic {
  width: 150px;
  height: 150px;
  margin: 3%;
  border: 1px solid #9d9d9d;
  border-radius: 30px;
}

.little {
  display: flex;
  flex: 1;
  line-height: 600%;
  font-size: 150%;
}
