.header {
  width: 100%;
  height: 2.08rem;
  background-color: white;
  position: relative;
}

.search_logo {
  position: absolute;
  left: 4%;
  top: 27%;
  z-index: 100;
}

input {
  width: 87%;
  position: absolute;
  top: 0.3rem;
  left: 2%;
  border-radius: 5px;
  border: 1px solid #e1e1e1;
  background: white;
  padding-left: 8%;
  font-size: 70%;
  color: #9d9d9d;
}

.search_into {
  position: absolute;
  right: 4%;
  top: 27%;
  z-index: 100;
}

.box {
  width: 30px;
  font-size: 70%;
}

.history {
  margin: 10px auto;
  font-size: 70%;
  line-height: 200%;
  border-top: 1px solid #9d9d9d;
  
}

.historylist {
 display: inline-flex;
  flex-direction: row;
  height: 50rpx;
  margin: 10rpx;
  padding: 5rpx;
  border: 2rpx solid sandybrown;
  border-radius: 10rpx;
}

.time{
  padding:3%;
height:70%;

}

.historytext {
  display: inline-block;
  padding:0% 4rpx;
}

.clear {
  padding: 10px auto;
  border-top: 1rpx solid #9d9d9d;
  text-align: center;
  font-size: 70%;
}

.clear image {
  padding-top: 5%;
  width: 20rpx;
  height: 20rpx;
}
