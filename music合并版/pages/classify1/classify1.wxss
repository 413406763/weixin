.search{
	display: flex;
  	flex-direction: row;
  	height: 50rpx;
	align-items: center;
}

.search .scan{
	display: flex;
  	flex-direction: column;
	align-items: center;
	width: 10%;
}

.search .search-input{
	padding: 5rpx;
	background-color: #FFFFFF;
	display: flex;
	flex-direction: row;
	height: 100%;
	width: 80%;
	-moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius:5px;
	align-items: center;
}
.search-icon{
	width: 30rpx;
	height: 30rpx;
}

.search-text{
	top:0px;
	padding:0px;
	left: 0rpx;
	right: 0rpx;
}

.widgets-img{
	width: 40rpx;
	height: 40rpx;
}

.widgets-title{
	color: #888888;
    font-size: 1px;
}






.container {
	display: flex;
  	flex-direction: column;
  	align-items: stretch;
  	box-sizing: border-box;
	background: #f5f5f5;
	padding-top: 10rpx;
	width: 100%;
	}

.block {
	width: 45%;
	float: left;
	height: 300rpx;
	margin-left: 30rpx;
	margin-bottom: 10rpx; 
}

.con-top {
	width: 100%;
	height: 70%;
}

.con-top image {
	width: 100%;
	height: 100%;
}

.con-bottom {
	clear: both;
	width: 100%;
	height: 20%;
	border-bottom: 1px solid #eee;
	box-sizing: border-box;
	display: flex;
}

.bot-content {
	padding: 10rpx;
	height: 100%;
	width: 90%;
	box-sizing: border-box;
}

.play {
	flex: 1;
	height: 100%;
	box-sizing: border-box;
	margin-right: 20rpx;
	display: flex;
	flex-direction: row;
  	align-items: center;
}

.play image {
	width: 28px;
	height: 28px;
}

.content view {
	width: 100%;
	margin-bottom: 20rpx;
	/*overflow: hidden;*/
}

.song-name {
	font-size: 14px;
}

.song-artists {
	font-size: 12px;
	color: #999;
}
